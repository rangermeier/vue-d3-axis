{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [ "*" ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
